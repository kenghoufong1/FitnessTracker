<link rel="stylesheet" type="text/css" href="/css/logstyle.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css">
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

<h1>Create a log</h1>
<div class="mainbody">
    <div id="log-box">
        <form id="signup-form">
            <label for="date">Log Date:</label>
            <input type="date" id="datepicker">
            <label for="workout-type">Workouts Done:</label>
            <div type="text" id="workout-types">
                <input type="checkbox" name="upper-body" value="Upper Body"> Upper Body<br>
                <input type="checkbox" name="lower-body" value="Lower Body"> Lower Body<br>
                <input type="checkbox" name="full-body" value="Full Body"> Full Body<br>
                <input type="checkbox" name="core" value="Core"> Core<br>
                <input type="checkbox" name="cardio" value="Cardio"> Cardio<br>
                <input type="checkbox" name="hiit" value="HIIT"> HIIT<br>
                <input type="checkbox" name="yoga" value="Yoga"> Yoga<br>
            </div>
            <label for="workout-duration">Workout Duration:</label>
            <select id="workout-duration" class="form-control">
                <option value="0:30">0:30</option>
                <option value="1:00">1:00</option>
                <option value="1:30">1:30</option>
                <option value="2:00">2:00</option>
                <option value="2:30">2:30</option>
                <option value="3:00">3:00</option>
                <option value="3:30">3:30</option>
                <option value="4:00">4:00</option>
            </select>
            <label for="sleep">Hours of Sleep:</label>
            <select id="sleep" class="form-control">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
                <option value="6">6</option>
                <option value="7">7</option>
                <option value="8">8</option>
                <option value="9">9</option>
                <option value="10">10</option>
                <option value="11">11</option>
                <option value="12">12</option>
            </select>
            <label for ="weight">Weight:</label>
            <input type="text" id="weight" name="weight">
            <label for="slider">How's your mood today?:</label> 
            <div class="container">
                <i class="material-icons" id="emoji">
                    sentiment_satisfied
                </i>
                <input type="range" min="0" max="4" value="2" id="slider">
            </div>
            <label for ="description">Description:</label>
            <input type="text" id="description" name="description">
            <input type="submit" class="button" id="save-log" value="Save">
        </form>
      </div>
</div>

<script src="./js/log.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
